<%- include('partials/head') %>
<body class="dashboard-page">
  
  <!-- Background Energy Grid -->
  <div class="energy-grid active"></div>
  
  <!-- Dashboard Container -->
  <div class="dashboard-container">
    
    <!-- Hero Header -->
    <div class="hero-header">
      <h1 class="dashboard-title">HERO COMMAND CENTER</h1>
      <div class="omnitrix-indicator">
        <div class="indicator-pulse"></div>
        <span>ACTIVE</span>
      </div>
    </div>
    
    <!-- Hero Profile Card -->
    <div class="hero-card">
      <div class="card-glow"></div>
      <div class="hero-avatar">
        <div class="avatar-ring"></div>
        <div class="avatar-inner">
          <%= username.charAt(0).toUpperCase() %>
        </div>
      </div>
      <div class="hero-info">
        <h2 class="hero-name"><%= username %></h2>
        <p class="hero-email"><%= email %></p>
        <div class="hero-status">
          <span class="status-badge">TRANSFORMATION READY</span>
        </div>
      </div>
    </div>
    
    <!-- Action Zones -->
    <div class="action-zones">
      
      <!-- Zone 1 -->
      <div class="action-zone zone-1">
        <div class="zone-icon">üî•</div>
        <h3 class="zone-title">POWER LEVEL</h3>
        <p class="zone-value">MAXIMUM</p>
