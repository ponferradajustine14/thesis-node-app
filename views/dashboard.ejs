        <div class="zone-icon">üõ°Ô∏è</div>
        <h3 class="zone-title">MISSIONS</h3>
        <p class="zone-value">READY</p>
      </div>
      
    </div>
    
    <!-- Transformation Hub (Navigation) -->
    <div class="transformation-hub">
      <div class="hub-title">TRANSFORMATION HUB</div>
      <div class="hub-options">
        <div class="hub-option">
          <div class="option-icon">üë§</div>
          <span>Profile</span>
        </div>
        <div class="hub-option">
          <div class="option-icon">‚öôÔ∏è</div>
          <span>Settings</span>
        </div>
        <div class="hub-option">
          <div class="option-icon">üéÆ</div>
          <span>Missions</span>
        </div>
        <a href="/logout" class="hub-option logout-option">
          <div class="option-icon">üîì</div>
